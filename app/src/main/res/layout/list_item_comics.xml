<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comics_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="name"
                android:layout_toStartOf="@+id/comics_rating"
                android:layout_toLeftOf="@+id/comics_rating" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comics_published"
                android:hint="published"
                android:layout_below="@+id/comics_name"
                android:layout_alignLeft="@+id/comics_name"
                android:layout_alignStart="@+id/comics_name"
                android:layout_toStartOf="@+id/comics_rating"
                android:layout_alignRight="@+id/comics_name"
                android:layout_alignEnd="@+id/comics_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comics_rating"
                android:hint="RAT"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="30sp"
                android:paddingLeft="4dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>