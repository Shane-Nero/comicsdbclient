<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.kutner.comicsdbclient.comicsdbclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cz.kutner.comicsdb.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.kutner.comicsdb.ComicsDetailActivity"
            android:label="@string/app_name">
            android:parentActivityName="cz.kutner.comicsdb.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.kutner.comicsdb.MainActivity" />
        </activity>
        <activity
            android:name="cz.kutner.comicsdb.AboutActivity"
            android:label="@string/title_activity_about"></activity>
    </application>

</manifest>
