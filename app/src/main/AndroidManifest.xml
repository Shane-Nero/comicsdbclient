<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.kutner.comicsdbclient.comicsdbclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="cz.kutner.comicsdb.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.default_searchable"
                android:value="cz.kutner.comicsdb.activity.ComicsSearchActivity" />
        </activity>

        <activity
            android:name="cz.kutner.comicsdb.activity.ComicsDetailActivity"
            android:label="@string/app_name"
            android:parentActivityName="cz.kutner.comicsdb.activity.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.kutner.comicsdb.activity.MainActivity" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value="cz.kutner.comicsdb.activity.ComicsSearchActivity" />
        </activity>

        <activity
            android:name="cz.kutner.comicsdb.activity.ForumActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value="cz.kutner.comicsdb.activity.ComicsSearchActivity" />
        </activity>

        <activity
            android:name="cz.kutner.comicsdb.activity.ClassifiedActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value="cz.kutner.comicsdb.activity.ComicsSearchActivity" />
        </activity>

        <activity
            android:name="cz.kutner.comicsdb.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme" />

        <activity
            android:name="cz.kutner.comicsdb.activity.ComicsSearchActivity"
            android:label="@string/title_activity_comics_search"
            android:parentActivityName="cz.kutner.comicsdb.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.kutner.comicsdb.activity.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

    </application>

</manifest>
